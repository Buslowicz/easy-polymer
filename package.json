{
  "name": "easy-polymer",
  "version": "0.2.0",
  "description": "EaSy Polymer is a set of ES7/TS decorators for Polymer to save on boilerplate",
  "main": "dist/index.umd.js",
  "jsnext:main": "dist/index.es.js",
  "types": "index.d.ts",
  "author": "Draccoz",
  "license": "ISC",
  "keywords": [
    "polymer",
    "decorator",
    "typescript",
    "es7",
    "es2016"
  ],
  "config": {
    "app": {
      "entry": "esp",
      "src": "./src",
      "dist": "./dist",
      "formats": [
        "es",
        "umd",
        "umd:min"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Draccoz/easy-polymer"
  },
  "homepage": "https://github.com/Draccoz/easy-polymer",
  "scripts": {
    "build": "gulp build",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.38",
    "@types/polymer": "^1.1.28",
    "gulp": "latest",
    "gulp-rename": "latest",
    "gulp-sourcemaps": "latest",
    "gulp-tslint": "latest",
    "gulp-wrapper": "latest",
    "rollup-plugin-typescript": "latest",
    "rollup-plugin-uglify": "latest",
    "rollup-stream": "latest",
    "tslint": "latest",
    "tslint-config-standard": "latest",
    "typescript": "^2.0.8",
    "vinyl-buffer": "latest",
    "vinyl-source-stream": "latest"
  },
  "files": [
    "*"
  ]
}
